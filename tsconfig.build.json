{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "./build",
    "rootDir": "./src",

    "strict": true,
    "noImplicitAny": true,

    "lib": ["DOM", "ES2019"],
    "types": ["chrome"],

    "sourceMap": false,
    "removeComments": true,
    "noEmitOnError": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "importHelpers": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}